
import React, {useState} from 'react'



function App() {
	
     const [items,setItem] = useState([]);

  const addItem = () => {
  	setItem([...items,{
  		id: items.length,
  		value: Math.floor(Math.random()*10)+1
  	}])

  }
	return(

			<>
               <button onClick={addItem}> Add item</button>    
				<ul>

					{items.map(item=> (<li key={item.id}> { item.value } </li>))}

				</ul>



			</>
		)
}



export default App;
